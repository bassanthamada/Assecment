<Application x:Class="Registeration_And_Login_Desktop_Application_Assecment.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Registeration_And_Login_Desktop_Application_Assecment"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="label" TargetType="Label">
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="Background" Value="Black"></Setter>
            <Setter Property="Margin" Value="10 ,10,10,10"></Setter>
            <Setter Property="FontFamily" Value="Arial Black"></Setter>
            <!--<Setter Property="Border" Value="White"></Setter>-->
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Height" Value="64"></Setter>
            <Setter Property="Width" Value="277"></Setter>
        </Style>
        <Style x:Key="button" TargetType="Button">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Background" Value="LightBlue"></Setter>
            <Setter Property="Margin" Value="10 ,10,10,10"></Setter>
            <!--<Setter Property="Border" Value="Red"></Setter>-->
        </Style>
    </Application.Resources>
</Application>
